<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.me.challange.milan.challangeme">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name_text"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotificationActivity"
            android:label="@string/title_activity_notification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FaceChallangesActivity"
            android:label="@string/title_activity_face_challanges"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChallangePopUpActivity"
            android:label="@string/title_activity_challange_pop_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MakeChallangeActivity"
            android:label="@string/title_activity_make_challange"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GiveChallangeActivity"
            android:label="@string/title_activity_give_challange"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MakeOpenChallange"
            android:label="@string/title_activity_make_open_challange"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SelectChallangeCategoryActivity"
            android:label="@string/title_activity_select_challange_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginDetailsActivity"
            android:label="@string/title_activity_login_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TagsSelectorActivity"
            android:label="@string/title_activity_tags_selector"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ResultSheetActivity"
            android:label="@string/title_activity_result_sheet"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PaytmActivity"
            android:label="@string/title_activity_paytm"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
