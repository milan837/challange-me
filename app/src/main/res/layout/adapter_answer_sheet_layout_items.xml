<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_relative_layout"
        android:layout_marginLeft="10dp"
        android:elevation="5dp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_cross"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/adapter_face_challanges_face_right_wrong" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="What is the platfrom for web application development using java ?"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:textColor="#000"
                android:id="@+id/adapter_face_challanges_face_question_question" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="J2EE PlatForm"
            android:background="@drawable/winner_background_textview"
            android:textColor="#FFF"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:minWidth="100dp"
            android:maxWidth="150dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/adapter_first_answer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="JSE PlatForm"
            android:layout_marginLeft="5dp"
            android:background="@drawable/winner_background_textview"
            android:textColor="#FFF"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:minWidth="100dp"
            android:textAlignment="center"
            android:maxWidth="150dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/adapter_second_answer" />
    </LinearLayout>

    <!-- second answer div -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="JME PlatForm"
            android:background="@drawable/winner_background_textview"
            android:textColor="#FFF"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:minWidth="100dp"
            android:maxWidth="150dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/adapter_third_answer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="JDBC PlatForm"
            android:layout_marginLeft="5dp"
            android:background="@drawable/winner_background_textview"
            android:textColor="#FFF"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:minWidth="100dp"
            android:maxWidth="150dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/adapter_fourth_answer" />
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="JDBC PlatForm"
            android:layout_marginLeft="10dp"
            android:background="@drawable/blue_round"
            android:textColor="#FFF"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:minWidth="100dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/adapter_given_answer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="JDBC PlatForm"
        android:layout_marginLeft="10dp"
        android:background="@drawable/loser_background_textview"
        android:textColor="#FFF"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:minWidth="100dp"
        android:layout_marginBottom="8dp"

        android:id="@+id/adapter_correct_answer" />

    </LinearLayout>
</LinearLayout>