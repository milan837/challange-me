<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.me.challange.milan.challangeme.LoginDetailsActivity"
    tools:showIn="@layout/activity_login_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/challanger_user_face_image"
            app:civ_border_color="@color/blue"
            app:civ_border_width="5dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="Nick Name"
        android:id="@+id/nick_name"
        android:background="@drawable/edit_text_box_design"
        android:layout_gravity="center_vertical" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:hint="Gender"
        android:id="@+id/gender"
        android:background="@drawable/edit_text_box_design"
        android:layout_gravity="center_vertical" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Login Date"
        android:background="@drawable/button_blue"
        android:textColor="#FFF"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:id="@+id/save_login_date_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</LinearLayout>
