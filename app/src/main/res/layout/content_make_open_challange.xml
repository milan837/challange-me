<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.me.challange.milan.challangeme.MakeOpenChallange"
    tools:showIn="@layout/activity_make_open_challange">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="@drawable/adapter_game_details_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/make_open_challanger_details_layout"
        android:padding="5dp"
        android:layout_marginTop="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Milan Shrestha"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:minWidth="100dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/loser_background_textview"
                android:id="@+id/make_open_challanger_user_name_textView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Java"
                android:padding="4dp"
                android:id="@+id/open_challange_tag_on_subject_text_view"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <!-- challanger inro div -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:id="@+id/make_open_lineraLayout">

                <!-- for profile picture -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="100dp"
                    android:gravity="center">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/make_open_challanger_user_face_image"
                        android:src="@drawable/profile_picture"
                        app:civ_border_color="@color/brick"
                        app:civ_border_width="5dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="10"
                        app:civ_shadow_color="#8BC34A"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="60dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/levels_icon"
                        android:src="@mipmap/ic_level_icons"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:id="@+id/make_open_challanger_user_total_levels_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="A+" />

                </LinearLayout>

                <!-- for Total challange faced -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="60dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/make_open_challanger_user_coines_icon"
                        android:src="@mipmap/ic_coines"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/make_open_challanger_user_coines_text"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="68" />
                </LinearLayout>


                <!-- for Total challange faced -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="60dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/make_open_total_challange_face_icon"
                        android:src="@mipmap/ic_game"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/make_open_challanger_user_total_challange_face_text"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="68" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/note_text"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Your open challange will be set to only 24 hours\nIf any challangers wine your open challange then you will loose your coins of that challange\nIf challangers win your challange than your challange will expire immediately \nif the any challangers will loose your challange while facing then you will earn some coines" />

    </LinearLayout>


    <!-- challanging items -layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/make_open_challanger_details_layout"
        android:orientation="vertical"
        android:elevation="8dp"
        android:background="@drawable/adapter_game_details_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/make_open_linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Set Conis For Challanger"
            android:id="@+id/make_open_set_coin_for_challanger_textview" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="10dp"
                android:hint="Coins"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_text_box_design"
                android:ems="10"
                android:layout_marginTop="3dp"
                android:id="@+id/make_open_take_coins_edit_text" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@mipmap/ic_coines"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </LinearLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Make A Challange"
            android:id="@+id/make_open_makeChallangeButton"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            android:background="@drawable/button_blue"
            android:textColor="#FFF"
            android:textSize="17dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
